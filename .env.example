# Server
PORT=5000
NODE_ENV=development

# Rate Limiting
# Set to 'false' to disable rate limiting globally (default: true)
RATE_LIMITER_ENABLED=true

# Socket.IO Debug Logging
# Set to 'true' to enable detailed socket event logging (default: false)
# Warning: Enabling this in production will impact performance
SOCKET_DEBUG_LOGGING=false

# Kafka Configuration (Optional)
# Set to 'true' to enable Kafka for message queue processing (default: false)
# When disabled, messages are processed directly through Socket.IO
# Kafka provides better handling of consecutive messages and horizontal scaling
ENABLE_KAFKA=false
KAFKA_BROKER=localhost:9092

# Database
MONGODB_URI=localhost:27017

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Production URLs (for CORS)
PRODUCTION_FRONTEND_URL=https://fieldsy.indiitserver.in
PRODUCTION_ADMIN_URL=https://fieldsy-admin.indiitserver.in

# JWT Secret
JWT_SECRET=your-jwt-secret-key-here

# Email Configuration (Nodemailer)
# For Gmail: smtp.gmail.com, port: 587
# For Outlook: smtp-mail.outlook.com, port: 587
# For Yahoo: smtp.mail.yahoo.com, port: 587
# For Custom SMTP: your-smtp-server.com, port: 587 or 465
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
